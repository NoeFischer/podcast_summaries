{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "metadata": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "participants": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "title",
                "date",
                "participants"
            ]
        },
        "summary": {
            "type": "string"
        },
        "topics": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "quotes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "quote": {
                        "type": "string"
                    },
                    "speaker": {
                        "type": "string"
                    }
                },
                "required": [
                    "quote",
                    "speaker"
                ]
            }
        },
        "terms": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "recommendations": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "conclusions": {
            "type": "string"
        }
    },
    "required": [
        "metadata",
        "summary",
        "topics",
        "quotes",
        "terms",
        "recommendations",
        "conclusions"
    ]
}